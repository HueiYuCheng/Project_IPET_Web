                                        <a class="page-link " id="page-ctrl-next">
                                            <span>&raquo;</span>
                                        </a>
                                    </li>
                                </ul>
                                <h2 id="pagenumber" style="float:right; text-align:center;"></h2>
                            </nav>
                         
                        </div>
                    </div>
                    <!-- Page End -->
                    <div id=listview>




                        <!-- Single Blog Start -->
                        <div class="row row-cols-lg-2 row-cols-sm-2 row-cols-1 m-b-n40"  data-aos="flip-left" data-aos-duration="500" data-aos-easing="ease-in-sine">

                            @{ 
                                foreach (var item in Model)
