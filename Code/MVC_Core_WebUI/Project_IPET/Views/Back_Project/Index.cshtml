
@{
    ViewData["Title"] = "Index";
}

<h1>專案管理</h1>
<table id="shippers" class="table table-bordered">
    <thead>
        <tr>
            <th>序號</th>
            <th>專案編號</th>
            <th>專案名稱</th>
            <th>目標金額</th>
            <th>動作</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>1</td>
            <td>23</td>
            <td>七月救濟浪浪</td>
            <th>10000</th>
            <td><button class="btn btn-secondary mr-3" data-toggle="modal" data-target="#addModal"><i class="fas fa-pen-nib"></i></button><button class="btn btn-danger"><i class="fas fa-trash-alt"></i></button></td>
        </tr>
        <tr>
            <td>2</td>
            <td>31</td>
            <td>九月救濟浪浪</td>
            <th>5000</th>
            <td><button class="btn btn-secondary mr-3" data-toggle="modal" data-target="#addModal"><i class="fas fa-pen-nib"></i></button><button class="btn btn-danger"><i class="fas fa-trash-alt"></i></button></td>
        </tr>
    </tbody>
</table>
<!-- Modal -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Shipper <span></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addForm">
                    <input type="hidden" name="ShipperID" id="ShipperID">
                    <div class="form-group">
                        <label for="CompanyName">CompanyName</label>
                        <input type="text" class="form-control" id="CompanyName" name="CompanyName"
                               placeholder="公司名稱">
                    </div>
                    <div class="form-group">
                        <label for="Phone">Phone</label>
                        <input type="text" class="form-control" id="Phone" name="Phone" placeholder="電話">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">關閉</button>
                <button type="button" class="btn btn-primary" id="buttonSend">送出</button>
            </div>
        </div>
    </div>
</div>
