
@{
    ViewData["Title"] = "專案管理";
}

<h1>專案管理</h1>
<a id="buttonAdd" class="btn btn-primary mb-3" asp-action="Create"><i class="fas fa-plus-square"> 新增專案</i></a>

<table id="shippers" class="table table-bordered">
    <thead>
        <tr>
            <th>序號</th>
            <th>專案編號</th>
            <th>專案名稱</th>
            <th>目標金額</th>
            <th>動作</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>1</td>
            <td>23</td>
            <td>七月救濟浪浪</td>
            <td>10000</td>
            <td>
                <button type="button" class="btn btn-secondary mr-3" data-bs-toggle="modal" data-bs-target="#projectModal">
                    <i class="fas fa-pen-nib"></i>
                </button>
                <button type="button" class="btn btn btn-danger mr-3">
                    <i class="fas fa-trash-alt"></i>
                </button>
            </td>
        </tr>
        <tr>
            <td>2</td>
            <td>31</td>
            <td>九月救濟浪浪</td>
            <td>5000</td>
            <td>
                <button type="button" class="btn btn-secondary mr-3" data-bs-toggle="modal" data-bs-target="#projectModal">
                    <i class="fas fa-pen-nib"></i>
                </button>
                <button type="button" class="btn btn btn-danger mr-3">
                    <i class="fas fa-trash-alt"></i>
                </button>
            </td>
        </tr>
    </tbody>
</table>
<!-- Modal -->
<div class="modal fade" id="projectModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">專案修改 <span></span></h5>
            </div>
            <div class="modal-body">
                <form id="addForm" style="margin:10px">
                    <div class="form-group" style="margin:10px 0">
                        <label for="title" style="font-size:25px;color:black">專案名稱</label>
                        <input type="text" class="form-control" id="title" placeholder="專案名稱">
                    </div>
                    <div class="form-group" style="margin:10px 0">
                        <label for="description" style="font-size:25px">專案簡介</label>
                        <input type="text" class="form-control" id="description" placeholder="專案簡介">
                    </div>
                    <div class="form-group" style="margin:10px 0">
                        <label for="prjphoto" style="font-size:25px;color:black">專案圖片</label>
                        <input type="file" class="form-control" id="prjphoto">
                    </div>
                    <div class="form-group" style="margin:10px 0">
                        <label for="goal" style="font-size:25px">專案目標</label>
                        <input type="text" class="form-control" id="goal" placeholder="專案目標">
                    </div>
                    <div class="form-group" style="margin:10px 0">
                        <label for="content" style="font-size:25px">開始日期</label>
                        <input type="date" class="form-control" id="content" placeholder="開始日期">
                    </div>
                    <div class="form-group" style="margin:10px 0">
                        <label for="content" style="font-size:25px">結束日期</label>
                        <input type="date" class="form-control" id="content" placeholder="結束日期">
                    </div>
                    <div class="form-group" style="margin:10px 0">
                        <label for="content" style="font-size:25px">專案說明</label><br />
                        <textarea id="content" style="width:100%" rows="15"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a class="btn btn-secondary" asp-action="Index">關閉</a>
                <a class="btn btn-danger" asp-action="Index">送出</a>
            </div>
        </div>
    </div>
</div>
