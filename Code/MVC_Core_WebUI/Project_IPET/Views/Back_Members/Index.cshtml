@model IEnumerable<Project_IPET.ViewModels.CBackMembersViewModel>
@{ ViewData["Title"] = "會員管理"; }

<form asp-action="" method="post">
    <div class="row mb-3 mt-0">
        <div class="col-lg-4 d-flex align-items-center justify-content-start">
            <div class="nav-wrapper position-relative end-0">
                <ul class="nav nav-pills nav-fill p-1" role="tablist">
                    <li class="nav-item" style="padding-right:10px">
                        <a class="nav-link mb-0 px-0 py-1 active" data-bs-toggle="tab" href="#profile-tabs-icons" role="tab" aria-controls="preview" aria-selected="true">
                            <span class="material-icons align-middle mb-1">
                                info
                            </span>
                            Info
                        </a>
                    </li>
                    <li class="nav-item" style="padding-right:5px">
                        <a class="nav-link mb-0 px-0 py-1" data-bs-toggle="tab" href="#dashboard-tabs-icons" role="tab" aria-controls="code" aria-selected="false">
                            <span class="material-icons align-middle mb-1">
                                account_box
                            </span>
                            Details
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-lg-3 mt-2 d-flex align-items-center justify-content-start">
            <div class="form-check form-switch" style="padding-right:20px">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" name="Male">
                <label class="form-check-label" for="flexSwitchCheckChecked">男</label>
            </div>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" name="Female">
                <label class="form-check-label" for="flexSwitchCheckChecked">女</label>
            </div>
        </div>
        <div class="col-lg-3"></div>
        <div class="col-lg-2 d-flex ">
            <div class="d-flex align-items-center justify-content-end">
                <div class="input-group input-group-outline">
                    <label class="form-label">Search……</label>
                    <input name="Keyword" value="" type="text" class="form-control">
                </div>
            </div>
            <div class="d-flex align-content-end justify-content-start">
                <button type="button" class="btn btn-primary mt-3">
                    <i class="material-icons">search</i>
                </button>
            </div>
        </div>
    </div>
</form>

<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">會員資訊</h6>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0">

                    <table class="table align-items-center mb-0">
                        <thead>
                            @*ListView here*@
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">會員</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">帳號</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">性別</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">生日</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Phone</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">地址</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">註冊日期</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">banned</th>
                                <th class="text-secondary opacity-7"></th>
                            </tr>
                        </thead>

                        <tbody>
                            @{ foreach (var item in Model)
                                {
                                    int count = 0;
                    <tr class="ListView">
                        <td>
                            <div class="d-flex px-2 py-1">
                                <div>
                                    <img src="~/Back/images/team-1.jpg" class="avatar avatar-sm me-3 border-radius-lg" alt="user@{++count;} ">
                                </div>
                                <div class="d-flex flex-column justify-content-center">
                                    <h6 class="mb-0 text-sm">@Html.DisplayFor(modelItem => item.Name)</h6>
                                    <p class="text-xs text-secondary mb-0">@Html.DisplayFor(modelItem => item.Email)</p>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle text-center">
                            <span class="text-secondary text-xs font-weight-bold">@Html.DisplayFor(modelItem => item.UserId)</span>
                        </td>
                        <td class="align-middle text-center text-sm">
                            @{ if (item.Gender == "Male")
                                {
                <span class="badge badge-sm bg-gradient-info">@Html.DisplayFor(modelItem => item.Gender)</span>}
            else if (item.Gender == "Female")
            {
<span class="badge badge-sm bg-gradient-danger">@Html.DisplayFor(modelItem => item.Gender)</span>}
else
{
<span class="badge badge-sm bg-gradient-secondary">@Html.DisplayFor(modelItem => item.Gender)</span> } }
                        </td>
                        <td class="align-middle text-center">
                            <span class="text-secondary text-xs font-weight-bold">  @Html.DisplayFor(modelItem => item.BirthDate)</span>
                        </td>
                        <td class="align-middle text-center">
                            <span class="text-secondary text-xs font-weight-bold"> @Html.DisplayFor(modelItem => item.Phone)</span>
                        </td>
                        <td class="align-middle text-center">
                            <span class="text-secondary text-xs font-weight-bold"> @Html.DisplayFor(modelItem => item.Address)</span>
                        </td>
                        <td class="align-middle text-center">
                            <span class="text-secondary text-xs font-weight-bold"> @Html.DisplayFor(modelItem => item.RegisteredDate)</span>
                        </td>
                        <td class="align-middle text-center">
                            <a class="fa fa-ban"></a>
                        </td>
                    </tr>
 } }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <li class="page-item none">
            <a class="page-link" id="page-ctrl-previous">
                <span class="material-icons">
                    keyboard_arrow_left
                </span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        @{ int pageNum = ViewBag.TOTALPAGE;

            for (int i = 1; i <= pageNum; i++)
            {
<li class="page-item"><a class="page-link" onclick="listviewShow(@i) ">@i</a></li> } }
        <li class="page-item">
            <a class="page-link" id="page-ctrl-next">
                <span class="material-icons">
                    keyboard_arrow_right
                </span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>

@section Scripts
{
    <script>
        let current;
        let countOnePage = @ViewBag.COUNTONEPAGE;
        let totalMembers = @ViewBag.TOTALMEMBERS;
        let totalPage = @ViewBag.TOTALPAGE;
        listviewShow(1);

    //#region ListView
        function listviewShow(page) {
            @*$.post('@Url.Content("~/Back_Members/ListView")',
                { inputPage: page })
                        .done((response) => {
                            $("#ListView").html(response);
                        })*@

            current = parseInt(`${page}`);
            let elementli = $("ul.pagination").children("li");
            let elementdata = $(".ListView");

            if (totalMembers != 0) {
                elementli.removeClass("active").eq(page).addClass("active")
                PageList(page, elementli, totalPage)
                PageData(page, elementdata, countOnePage, totalMembers)
            }
            else {
                elementli.eq(0).css("display", "none");
                elementli.eq(totalPage + 1).css("display", "none");
            }

        }

        $("#page-ctrl-previous").click(function () {
            if (current > 1)
                listviewShow(current - 1);
        });
        $("#page-ctrl-next").click(function () {
            if (current < totalPage)
                listviewShow(current + 1);
        });
            //#endregion

    </script>
}
