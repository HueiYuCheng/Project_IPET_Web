    </div>
    <div class="col-lg-3"></div>
    <div class="col-lg-2 d-flex align-items-center justify-content-end">
        <div class="input-group input-group-outline">

            @*<label class="form-label">Search……</label>
                <input name="txtKeyword" onchange="listviewShow(this.value)" value="" type="text" class="form-control">
                <button type="submit">Search</button>*@

            <form asp-action="ListView" method="post">
            <label class="form-label">Search……</label>
            <input name="txtKeyword" value="" type="text" class="form-control">
            <input type="submit" value="Search" />
            </form>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">會員資訊</h6>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0">
                    <div id="ListView">
                        @*ListView here*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <li class="page-item none">
            <a class="page-link" id="page-ctrl-previous">
                <span class="material-icons">
                    keyboard_arrow_left
                </span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        @{ int pageNum = ViewBag.PAGE;

            for (int i = 1; i <= pageNum; i++)
            {
<li class="page-item"><a class="page-link" onclick="listviewShow(@i) ">@i</a></li>
 } }
        <li class="page-item">
            <a class="page-link" id="page-ctrl-next">
                <span class="material-icons">
                    keyboard_arrow_right
                </span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>

@section Scripts
{
    <script>
        let current;
        let totalPage = @ViewBag.PAGE;
        listviewShow(1);

    //#region ListView
        function listviewShow(page ,keyword) {
            $.post('@Url.Content("~/Back_Members/ListView")',
                { inputPage: page , txtKeyword: keyword })
                        .done((response) => {
                            $("#ListView").html(response);
                        })

            current = parseInt(`${page}`);
            let elementli = $("ul.pagination").children("li");
            elementli.removeClass("active").eq(page).addClass("active")
            PageList(page, elementli, totalPage)

        }
        $("#page-ctrl-previous").click(function () {
            if (current > 1)
                listviewShow(current - 1);
        });
        $("#page-ctrl-next").click(function () {
            if (current < totalPage)
                listviewShow(current + 1);
        });
            //#endregion

    </script>
}
